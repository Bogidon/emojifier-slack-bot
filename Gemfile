source 'https://rubygems.org'
ruby "2.3.1"

# A Slack bot framework
gem 'slack-ruby-bot'

# Websockets driver for slack-ruby-bot
gem 'celluloid-io'

# Ruby wrapper for ImageMagic
gem 'mini_magick'

# PhantomJS driver for browser automation
gem 'rspec'
gem 'capybara'
gem 'poltergeist'

# Color console output
gem 'colorize'

# To keep things alive
gem 'sinatra'

# ...and of course puma
gem 'puma'

group :development do
	gem 'dotenv'
end